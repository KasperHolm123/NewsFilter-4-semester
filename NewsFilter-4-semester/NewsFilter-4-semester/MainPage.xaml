<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:NewsFilter_4_semester"
             mc:Ignorable="d"
             x:Class="NewsFilter_4_semester.MainPage">

    <Grid ColumnDefinitions="*, *"
          RowDefinitions="50, 50, *"
          VerticalOptions="Start">
        <Grid BackgroundColor="Gray"
              Grid.ColumnSpan="2"
              Grid.Row="0">
            <Image Source="dotnet_bot.svg"
                   HorizontalOptions="Start">
            </Image>
            <Button Text="Settings"
                    BackgroundColor="Gray"
                    HeightRequest="50"
                    HorizontalOptions="End">
            </Button>
            <AbsoluteLayout HeightRequest="100"
                            VerticalOptions="Start"
                            BackgroundColor="Gray"
                            ZIndex="-1">
                <Button Text="Trending"
                        WidthRequest="75"
                        FontSize="11"
                        BackgroundColor="Gray"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds="0, 1, 50, 50">

                </Button>
                <Button Text="World"
                        WidthRequest="75"
                        FontSize="11"
                        BackgroundColor="Gray"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds="0.5, 1, 50, 50">

                </Button>
                <Button Text="Technology"
                        WidthRequest="100"
                        FontSize="11"
                        BackgroundColor="Gray"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        AbsoluteLayout.LayoutBounds="0.98, 1, 50, 50">

                </Button>
            </AbsoluteLayout>
        </Grid>
        <ScrollView Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
            <StackLayout BindableLayout.ItemsSource="{Binding Articles}"
             Grid.Row="2"
             Grid.Column="0"
             Grid.ColumnSpan="2" BackgroundColor="#383838">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#7a7a7a" CornerRadius="10" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Padding="0" Margin="0" WidthRequest="100" HeightRequest="100">
                                    <Image Source="https://cdn.mos.cms.futurecdn.net/YDDJGnLfoCvjEPU9PLCkj9-970-80.jpg.webp" Aspect="AspectFill" />
                                </Border>

                                <StackLayout Grid.Column="1" Margin="10, 0, 0, 0" Spacing="5">
                                    <Label TextColor="#fff" Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold"/>
                                    <Label TextColor="#fff" Text="{Binding Description}" FontSize="Small" MaxLines="5"/>
                                    <Button Text="Read More" BackgroundColor="#383838" TextColor="#fff" CornerRadius="5" Margin="0, 10, 0, 0"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
