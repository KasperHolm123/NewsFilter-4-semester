<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NewsFilter_4_semester.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewsFilter_4_semester"
    xmlns:views="clr-namespace:NewsFilter_4_semester.Pages"
    BackgroundColor="{AppThemeBinding Light={StaticResource DR_Red}, Dark={StaticResource Gray950}}">

    <TabBar>
        <Tab Title="Feed">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Filters">
            <ShellContent ContentTemplate="{DataTemplate views:FilterPage}"/>
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"/>
        </Tab>
    </TabBar>
</Shell>
